{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/nav_bar.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar-container">
        <div class="navbar-left">
            <a href="{{ path('app_home') }}" class="navbar-logo">Sport'n go</a>
        </div>
        <div class="navbar-right">
            {% if app.user %}
                <span class="user-info">Bonjour, {{ app.user.name }}</span>
                <a href="{{ path('app_settings') }}" class="navbar-btn navbar-btn-settings"></a>
                <a href="{{ path('app_logout') }}" class="navbar-btn navbar-btn-logout">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="navbar-btn navbar-btn-login">Se connecter</a>
                <a href="{{ path('app_register') }}" class="navbar-btn navbar-btn-register">Créer un compte</a>
            {% endif %}
        </div>
    </nav>
{% endblock %}